extends container

block content
	include navBar
	br
	.ui.container
		.ui.four.stackable.cards
			- var books = data.books;
			- for( var i = 0; i < books.length; i ++ )
				- var book = books[i];
				//- for test
				- if(book.img != './asset/images/books/.jpg') 
					.card.red
						.content
							.header= book.title
						a.image
							img.ui.image.small(src=book.img style='max-height:410px')		
						//- .extra.content
						.content
							.meta
								span.right.floated.time= book.status
								span.category= book.series + ' / ' + book.id
						.ui.bottom.attached.button
							i.print.icon
							|       列印借書單
